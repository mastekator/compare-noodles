{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "baseUrl": "./",
    "jsx": "preserve"
  },
  "plugins": [
    {
      "name": "typescript-plugin-css-modules",
      "options": {
        "classnameTransform": "dashes",
        "customMatcher": "\\.m\\.css$",
        "customRenderer": "./myRenderer.js",
        "dotenvOptions": {},
        "postCssOptions": {},
        "rendererOptions": {}
      }
    }
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "components/ui/icons",
    "node_modules",
    ".next"
  ]
}
